BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo Starting ssh buildpack compile.

mkdir -p ~/.ssh/
chmod 700 ~/.ssh/

# Get key the new heroku way.
#echo "$SSH_KEY" > ~/.ssh/id_rsa
mv $ENV_DIR/SSH_KEY ~/.ssh/id_rsa || echo no find private key
chmod 400 ~/.ssh/id_rsa

echo 'StrictHostKeyChecking=no' > ~/.ssh/config
chmod 600 ~/.ssh/config

mkdir -p "$BUILD_DIR/.profile.d"
# Conceal SSH_KEY from runtime.
cat > "$BUILD_DIR/.profile.d/00-clobber-ssh-key.sh" << EOF
echo 'unsetting ssh deploy key'
unset -v SSH_KEY
EOF
